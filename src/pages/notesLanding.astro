---
import Header from "../components/Header.astro";
import PostCard from "../components/PostCard.vue";
import PostCardSection from "../components/PostCardSection.astro";
import StatTheoryHero from "../assets/mu.png"
import AsTheoryHerod from "../assets/muuuu.png"
---

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/protfolio-website/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Notes</title>
  </head>
  <body>
    <Header />
    <div
      class="flex justify-center w-screen bg-landing bg-repeat overflow-auto"
    >
      <div
        class="md:flex-col justify-center w-[70%] relative mt-10 pb-10 transition-all ease-in-out"
      >
        <div
          class="h-[1.2em] w-full text-[60px] sm:tracking-wide sm:text-[40px] text-[#ffffff00] sm:w-auto sm:absolute sm:left-[-180px] sm:top-[210px] sm:rotate-[-90deg] z-10 bg-theme-orange-500 flex justify-center items-center text-3xl transition-all ease-in-out font-display-mono font-light bg-clip-text bg-gradient-to-t from-theme-pink-500 to-theme-orange-500"
        >
          University Notes
        </div>
        <div
          class="h-[825px] w-full sm:relative sm:top-0 z-20 items-center font-medium text-3xl mt-[-29px] sm:mt-0 sm:w-[90%] left-5 transition-all ease-in-out"
        >
          <PostCardSection title="Statistical Theory">
            <PostCard
              client:load
              to="https://enchanting-snapper-241.notion.site/Summary-Probability-Theory-ae5db1a5a336496bba2a242724a94139?pvs=74"
              imgURL={StatTheoryHero.src}
              title="Summary Probability Theory"
            />
            <PostCard
              client:load
              to="https://enchanting-snapper-241.notion.site/Summary-Decision-Theory-321414679b554944b9d13e7e4ebd83eb?pvs=74"
              imgURL={StatTheoryHero.src}
              title="Summary Decision Theory"
            />
          </PostCardSection>
          <PostCardSection title="S.T. in a nutshell">
            <PostCard
              client:load
              to="https://enchanting-snapper-241.notion.site/S-T-in-a-Nutshell-b2907b56ba7e4cdab672fd9acb6b9b76?pvs=4"
              imgURL={StatTheoryHero.src}
              title="Notes"
            />
          </PostCardSection>
          <PostCardSection title="Asymptotic Theory">
            <PostCard
              client:load
              to="https://enchanting-snapper-241.notion.site/Summary-asymptotic-theory-a6e8d6a1bfc24189add5cbba7aacc09e"
              imgURL={AsTheoryHerod.src}
              title="Summary"
            />
          </PostCardSection>
        </div>
      </div>
    </div>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;500;700&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;500;700&family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap");
</style>
